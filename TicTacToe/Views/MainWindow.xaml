<Window x:Class="TicTacToe.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe.Views"
        xmlns:vm="clr-namespace:TicTacToe.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800"
        Cursor="Hand">


    <Grid>
        <ContentControl Content="{Binding CurrentViewModel, Source={x:Static vm:MainViewModel.Instance}}"/>
    </Grid>
</Window>
